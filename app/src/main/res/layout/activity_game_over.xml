<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameOver">

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_30sdp"
        android:backgroundTint="@color/black"
        android:text="Restart Game"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score "
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/ibHomeBtn"
        app:layout_constraintEnd_toEndOf="@+id/btnRestart"
        app:layout_constraintStart_toStartOf="@+id/btnRestart"
        app:layout_constraintTop_toBottomOf="@+id/btnRestart" />

    <ImageButton
        android:id="@+id/ibHomeBtn"
        android:src="@drawable/home"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvHighScore"
        app:layout_constraintStart_toStartOf="@+id/tvHighScore"
        app:layout_constraintTop_toBottomOf="@+id/tvHighScore" />
</androidx.constraintlayout.widget.ConstraintLayout>